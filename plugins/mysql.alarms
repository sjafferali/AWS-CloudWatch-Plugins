#!/bin/bash

### MYSQL ALARM
aws cloudwatch put-metric-alarm --alarm-name MySQLConnections-$HOST_NAME --alarm-description "Alarm when mysql connections exceeds 150" --metric-name Connections --namespace MySQL --statistic Average --period $INTERVAL --threshold 150 --comparison-operator GreaterThanThreshold --evaluation-periods 5 --alarm-actions $sns_topic --dimensions Name=Server,Value=$HOST_NAME
aws cloudwatch put-metric-alarm --alarm-name MySQLProcesses-$HOST_NAME --alarm-description "Alarm when no mysql processes running" --metric-name MySQL --namespace Processes --statistic Average --period $INTERVAL --threshold 1 --comparison-operator LessThanThreshold --evaluation-periods 10 --alarm-actions $sns_topic --dimensions Name=Server,Value=$HOST_NAME


echo "aws cloudwatch delete-alarms --alarm-names MySQLConnections-$HOST_NAME" >> /opt/aws-scripts-mon/removealarms.sh
echo "aws cloudwatch delete-alarms --alarm-names MySQLProcesses-$HOST_NAME" >> /opt/aws-scripts-mon/removealarms.sh
