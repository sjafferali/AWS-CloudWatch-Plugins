#!/bin/bash


### LSYNC ALARM
aws cloudwatch put-metric-alarm --alarm-name LsyncProcesses-$(uname -n) --alarm-description "Alarm when no lsync processes running" --metric-name Lsync --namespace Processes --statistic Average --period 300 --threshold 1 --comparison-operator LessThanThreshold --dimensions Name=InstanceId,Value=$INSTANCE --evaluation-periods 2 --alarm-actions arn:aws:sns:us-west-2:776035308060:Monitoring_Alerts
