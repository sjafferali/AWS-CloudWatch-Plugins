#!/bin/bash

df -Ph | egrep "^/dev/" | grep -v "/san" | while read line
do
	/usr/bin/mon-put-instance-stats.py --disk-inode-util --disk-space-util --disk-path=$(echo $line | awk '{print$6}') > /dev/null
done

/usr/bin/mon-put-instance-stats.py --loadavg-percpu --mem-util > /dev/null

aws cloudwatch put-metric-data --metric-name IOWait --namespace System/Linux --dimensions InstanceId=$INSTANCE --value $(iostat 1 2 | grep -A1 avg-cpu | tail -1 | awk '{print$4}') --unit Percent > /dev/null
