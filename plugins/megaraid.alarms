#!/bin/bash


### MEGARAID ALARM
aws cloudwatch put-metric-alarm --alarm-name RaidStatus-$HOST_NAME --alarm-description "Alarm when raid status is unhealthy" --metric-name RaidStatus --namespace Raid --statistic Minimum --period $INTERVAL --threshold 1 --comparison-operator LessThanThreshold --evaluation-periods 1 --alarm-actions $sns_topic --dimensions Name=Server,Value=$HOST_NAME

echo "aws cloudwatch delete-alarms --alarm-names RaidStatus-$HOST_NAME" >> /opt/aws-scripts-mon/removealarms.sh
