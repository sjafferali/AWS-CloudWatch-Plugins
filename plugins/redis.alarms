#!/bin/bash

### REDIS ALARMS
aws cloudwatch put-metric-alarm --alarm-name RedisConnections-$HOST_NAME --alarm-description "Alarm when redis connections exceeds 500" --metric-name Connections --namespace Redis --statistic Average --period 300 --threshold 500 --comparison-operator GreaterThanThreshold --dimensions Name=InstanceId,Value=$INSTANCE --evaluation-periods 2 --alarm-actions $sns_topic
aws cloudwatch put-metric-alarm --alarm-name RedisProcesses-$HOST_NAME --alarm-description "Alarm when no redis processes running" --metric-name Redis --namespace Processes --statistic Average --period 300 --threshold 1 --comparison-operator LessThanThreshold --dimensions Name=InstanceId,Value=$INSTANCE --evaluation-periods 2 --alarm-actions $sns_topic


echo "aws cloudwatch delete-alarms --alarm-names RedisConnections-$HOST_NAME" >> /opt/aws-scripts-mon/removealarms.sh
echo "aws cloudwatch delete-alarms --alarm-names RedisProcesses-$HOST_NAME" >> /opt/aws-scripts-mon/removealarms.sh
