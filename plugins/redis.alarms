#!/bin/bash

### REDIS ALARMS
aws cloudwatch put-metric-alarm --alarm-name RedisConnections-$(uname -n) --alarm-description "Alarm when redis connections exceeds 500" --metric-name Connections --namespace Redis --statistic Average --period 300 --threshold 500 --comparison-operator GreaterThanThreshold --dimensions Name=InstanceId,Value=$INSTANCE --evaluation-periods 2 --alarm-actions arn:aws:sns:us-west-2:776035308060:Monitoring_Alerts
aws cloudwatch put-metric-alarm --alarm-name RedisProcesses-$(uname -n) --alarm-description "Alarm when no redis processes running" --metric-name Redis --namespace Processes --statistic Average --period 300 --threshold 1 --comparison-operator LessThanThreshold --dimensions Name=InstanceId,Value=$INSTANCE --evaluation-periods 2 --alarm-actions arn:aws:sns:us-west-2:776035308060:Monitoring_Alerts
